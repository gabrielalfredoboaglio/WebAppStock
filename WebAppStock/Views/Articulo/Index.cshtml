@model IEnumerable<CodigoComun.Modelos.Articulo>

@if (Model != null && Model.Any())
{
    <h2>Lista de Articulos</h2>
    <br />
    <table>
        <thead>
            <tr>
                <th>ID</th>
                <th>Nombre</th>
                <th>Marca</th>
                <th>Minimo Stock</th>
                <th>Proveedor</th>
                <th>Precio</th>
                <th>Codigo</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var articulo in Model)
            {
                <tr>
                    <td>@articulo.Id</td>
                    <td>@articulo.Nombre</td>
                    <td>@articulo.Marca</td>
                    <td>@articulo.MinimoStock</td>
                    <td>@articulo.Proveedor</td>
                    <td>@articulo.Precio</td>
                    <td>@articulo.Codigo</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No se encontraron Articulos.</p>
}
