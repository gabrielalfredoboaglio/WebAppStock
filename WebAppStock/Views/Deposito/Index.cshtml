@model List<CodigoComun.Models.Deposito>

<h2>Lista de depósitos</h2>

@if (Model != null && Model.Any())
{
    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Nombre</th>
                <th>Dirección</th>
                <th>Capacidad</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var deposito in Model)
            {
                <tr>
                    <td>@deposito.Id</td>
                    <td>@deposito.Nombre</td>
                    <td>@deposito.Direccion</td>
                    <td>@deposito.Capacidad</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No se encontraron depósitos</p>
}
