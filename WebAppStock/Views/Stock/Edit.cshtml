@using WebAppStock.ViewModels;

@model StockViewModels
<h2>Editar Stock</h2>
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" method="post">
            <input type="hidden" asp-for="Id" />

            <div class="form-group">
                <label for="SelectedArticulo" class="control-label">Artículo</label>
                @Html.DropDownListFor(model => model.SelectedArticulo, Model.selectArticulosList, new { @class = "form-control", disabled = "disabled" })
            </div>

            <div class="form-group">
                <label for="SelectedDeposito" class="control-label">Depósito</label>
                @Html.DropDownListFor(model => model.SelectedDeposito, Model.selectDepositosList, new { @class = "form-control", disabled = "disabled" })
            </div>

            <div class="form-group">
                <label asp-for="Cantidad" class="control-label">Cantidad</label>
                <input asp-for="Cantidad" class="form-control" />
            </div>

            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<div>
    <a asp-action="Index">Volver</a>
</div>


